{
  "name": "fuse-client",
  "version": "1.0.0",
  "description": "Fuse Client - Desktop app for team voice/video calls and chat",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:react\" \"npm run dev:electron\"",
    "dev:react": "vite",
    "dev:electron": "tsc -p tsconfig.electron.json && electron .",
    "build": "tsc && vite build && tsc -p tsconfig.electron.json",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "keywords": ["electron", "react", "voice", "chat", "webrtc"],
  "author": "Fuse Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "socket.io-client": "^4.6.1",
    "axios": "^1.4.0",
    "zustand": "^4.3.8"
  },
  "devDependencies": {
    "@types/react": "^18.2.14",
    "@types/react-dom": "^18.2.6",
    "@types/node": "^20.3.1",
    "@vitejs/plugin-react": "^4.0.1",
    "electron": "^25.2.0",
    "electron-builder": "^24.4.0",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "concurrently": "^8.2.0"
  },
  "build": {
    "appId": "com.fuse.app",
    "productName": "Fuse",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "win": {
      "target": ["nsis"]
    },
    "mac": {
      "target": ["dmg"]
    },
    "linux": {
      "target": ["AppImage"]
    }
  }
}
